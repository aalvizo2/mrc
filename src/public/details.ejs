</head>
<body>
  <body>
    <header class="red">
      <img src="img/logo.png" alt="">
      <a class="menu_toggle">â˜°</a>
      
        
          
          
          <ul>
              <li><a href="/">INICIO</a></li>
              <li><a href="/producto">PRODUCTOS</a></li>
              <li><a href="/descuentos">DESCUENTOS</a></li>
              <li><a href="/nosotros">NOSOTROS</a></li>
              
              <li><a href="search" class="bi bi-search"></a></li>
              <li><a href="cart" class="bi bi-cart"></a>
                <a class="objeto" href="cart"><%= objeto%></a>
              </li>
              
              <li>
                  <% if ( usuario ){ %>
                      <a href=""><%= usuario %></a>
                      <li><a href="/logout" class="bi bi-box-arrow-right"></a></li>
                  <% }else{%>
                      <a href="login" class="bi bi-person-circle"></a></li><br>
                  <%}%>
             
          </ul>
          
          
        
        
      </header>
   <div class="top"></div>
   <section class="section"><img src="productos/<%= fila[0].img_product%>" alt=""></section>
   <section class="section1">
       <h1><%= fila[0].nombre_prod%>:</h1>
       <p><%= fila[0].descripcion%></p>
       
       <p><b>$<%= parseFloat (fila[0].precio_publico).toLocaleString()%>.00</b></p>
       <form action="add-to-cart" method="post">
         <input type="hidden" name="img_product"  value="<%= fila[0].img_product%>">
         <input type="hidden" name="nombre_prod"  value="<%= fila[0].nombre_prod%>">
         <input type="hidden" name="precio_publico"  value="<%= fila[0].precio_publico%>">
         <input type="number" name="cantidad" id="" placeholder="Cantidad">
         <input type="submit" id="sweetalert" value="Agregar al Carrito">
       </form>
       
       
       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
       <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <% if (typeof alert != "undefined")  { %>
              <script>
              Swal.fire({
                
                text:'<%= alertMessage %>',
                icon:'<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
              }).then(()=>{
                window.location='/<%= ruta %>'
              })
              </script>
            <% } %>
   </section>
   <script src="script/responsive.js"></script>