        transform: scale(1.1);
    }

    .card-hover .card-body {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 1rem;
        text-align: center;
        opacity: 0;
        transition: opacity 0.5s ease;
    }

    .card-hover:hover .card-body {
        opacity: 1;
    }

    .card-hover .card-body a {
