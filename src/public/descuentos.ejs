<body>
  <header class="red">
    <img src="img/logo.png" alt="">
    <a class="menu_toggle">â˜°</a>
    
      
        
        
        <ul>
            <li><a href="/">INICIO</a></li>
            <li><a href="/producto">PRODUCTOS</a></li>
            <li><a href="/descuentos">PROMOCIONES</a></li>
            <li><a href="/nosotros">NOSOTROS</a></li>
            
            <li><a href="search" class="bi bi-search"></a></li>
            <li><a href="cart" class="bi bi-cart"><%= objeto%></a>
              
            </li>
            
            <li>
                <% if ( usuario ){ %>
                    <a href=""><%= usuario %></a>
                    <li><a href="/logout" class="bi bi-box-arrow-right"></a></li>
                <% }else{%>
                    <a href="login" class="bi bi-person-circle"></a></li><br>
                <%}%>
           
        </ul>
        
    
      
      
    </header>
    <div class="top"></div>
    
    <div class="container mt-4">
      <div class="row">
        <% for (let i = 0; i < datos.length; i++) { %>
          <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <a href="desc_details?id=<%= datos[i].id %>" class="text-decoration-none">
              <div class="card h-100">
                <img src="<%= urls[i]%>" class="card-img-top img-fluid" alt="<%= datos[i].nombre_prod %>">
                <div class="card-body text-center">
                  <h5 class="card-title"><%= datos[i].nombre_prod %></h5>
                  <p class="card-text text-danger fw-bold">$<%= parseFloat(datos[i].precio_publico).toLocaleString() %>.00</p>
                </div>
              </div>
            </a>
          </div>
        <% } %>
      </div>
    </div>
    
    
       <div class="paginacion">
         <ul>
            <%if(currentPage > 1){%>
          <li><a href="descuentos">Inicio</a></li>
          <%}%>
          <% for(i= 1; i <totalPages; i++){%>
            
            
            <li><a href="?pagina=<%= i + 1%>" class="<%= i === currentPage ? 'activo': '' %>"><%=i%></a></li>
            
          <%}%>
         </ul>
         
       </div>
     
    
<script src="script/responsive.js"></script>
