    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/ventas.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100&family=Quicksand&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <script src="script/nav.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <script src="https://kit.fontawesome.com/5210f6d31f.js" crossorigin="anonymous"></script>
    <title><%=admin %></title>
</head>
<body>
    <header class="red">
      
        <img src="img/logo.png" alt="">
        <a class="menu_toggle">☰</a>
        <ul>
            <li><a href="/inicio_admin">INICIO</a></li>
            <li><a href="/producto">PRODUCTOS</a></li>
            <li><a href="">MENSAJES</a></li>
            <li><a href="/upload">SUBIR PRODUCTO</a></li>
            <li><a href="/ventas">VENTAS</a></li>
            <li><a href="search" class="bi bi-search"></a></li>
            <li><a href="cart" class="bi bi-cart"></a></li>
            <li>
              <% if ( login ){ %>
              <a href=""><%= admin %></a>
              <% } %>
            </li>
            <li><a href="/logout" class="bi bi-box-arrow-right"></a></li>
            
        </ul>     
</header>
<div class="top"></div>
<section class="productos">
    <div class="listado">
        <h1>Producto:</h1>
        <h1>Cantidad:</h1>
    </div>
    <%for(let i=0; i<datos.length; i++){%>
        <div class="listado">
            <h1>-<%=datos[i].producto%></h1>
            <h1><%=datos[i].cantidad%></h1>
            
        </div>
        
    <%}%>
    <div class="datos">
        <h1>-Nombre: <%=datos[0].cliente_name%></h1>
        <h1>-Dirección: <%=datos[0].cliente_dir%></h1>
        <h1>-Télefono: <%=datos[0].telefono%></h1>
        <h1>-Correo Electronico: <%=datos[0].email%></h1>
        <h1>-Total: $<%=parseFloat(datos[0].total).toLocaleString();%>.00</h1>
    </div>
    <form action="/status" method="post">
        Estatus: <select name="estatus" id="">
            <option value="Preparando pedido">Preparando pedido</option>
            <option value="En camino">En camino</option>
            <option value="En paqueteria">En paqueteria</option>
        </select>
        <input type="text" name="paqueteria" placeholder="Paqueteria">
        <input type="number" name="guia" id="" placeholder="Número de guía ">
        <input type="hidden" name="cliente" value="<%=datos[0].cliente_name%>">
        <input type="submit" value="Actualizar">
    </form>
</section>