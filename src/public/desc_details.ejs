   <div class="top"></div>
   <section class="container my-5">
    <div class="row align-items-center">
        <!-- Imagen del producto -->
        <div class="col-md-7">
            <img src="<%= url %>" alt="<%= fila[0].nombre_prod %>" class="img-fluid rounded shadow-lg" style="max-height: 500px; width: 100%; object-fit: cover;">
        </div>

        <!-- Detalles del producto -->
        <div class="col-md-5">
            <h1 class="display-5 fw-bold mb-3"><%= fila[0].nombre_prod %></h1>
            <p class="lead text-muted"><%= fila[0].descripcion %></p>
            <p class="h4 text-danger fw-bold">$<%= parseFloat(fila[0].precio_publico).toLocaleString() %>.00</p>

            <!-- Formulario para agregar al carrito -->
            <form action="add-to-cart" method="post" class="mt-4">
                <input type="hidden" name="img_product" value="<%= fila[0].img_product %>">
                <input type="hidden" name="nombre_prod" value="<%= fila[0].nombre_prod %>">
                <input type="hidden" name="precio_publico" value="<%= fila[0].precio_publico %>">

                <div class="mb-3">
                    <label for="cantidad" class="form-label">Cantidad</label>
                    <input type="number" name="cantidad" id="cantidad" class="form-control" placeholder="Cantidad" min="1" required>
                </div>

                <button type="submit" id="sweetalert" class="btn btn-danger btn-lg w-100">Agregar al Carrito</button>
            </form>
        </div>
    </div>
</section>


